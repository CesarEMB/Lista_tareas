<%- include('partials/cabezera.ejs') %>

    <body>

        <%- include('partials/navbar.ejs') %>

            <div class="container p-4">
                <div class="row justify-content-center mt-5">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <h2>Registro de la Tarea</h2>
                                <form action="/add" method="post">

                                    <div class="form-group">
                                        <label for="Tarea">Ingrese su tarea</label>
                                        <input type="text" name="Tarea" placeholder="Ingrese su tarea" class="form-control" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="Fecha_tarea">Ingrese la Fecha</label>
                                        <input type="text" name="Fecha_tarea" placeholder="Ingrese la Fecha de la tarea" class="form-control">
                                    </div>

                                    <button type="submit" class="btn btn-primary">Guardar tarea</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container mt-5">
                <table class="table table-bordered table-hover ml-10">

                    <thead class="head">
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Tarea
                            </th>
                            <th>
                                Fecha
                            </th>

                            <th>
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) {%>
                            <% for (var i = 0; i< data.length; i++) { %>

                                <tr>

                                    <td class="cuerpo">
                                        <%= (i+1) %>
                                    </td>
                                    <td class="cuerpo">
                                        <%= data[i].Tarea %>
                                    </td>
                                    <td class="cuerpo">
                                        <%= data[i].Fecha_tarea %>
                                    </td>

                                    <td>
                                        <a href="/delete/<%= data[i].id %> " class="btn btn-danger mr-2">Borrar</a>
                                        <a href="/update/<%= data[i].id %> " class="btn btn-secondary mr-2">Editar</a>
                                        <input type="checkbox" name="validacion" id="check">
                                        <label for="validacion" class="val">Completado</label>
                                    </td>
                                </tr>

                                <% } %>
                                    <% } %>
                    </tbody>

                </table>
            </div>

            <%- include('partials/navfun.ejs') %>
    </body>


    </html>